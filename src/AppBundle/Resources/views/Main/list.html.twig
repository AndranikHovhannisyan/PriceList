{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}
    {{ parent() }}

    <div class="container content">
        <form method="POST" action="{{ path('list') }}">
            <div class="row">
                <div class="col-md-3"><strong>User</strong></div>
                <div class="col-md-3"><strong>From</strong></div>
                <div class="col-md-3"><strong>To</strong></div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    {% if is_granted('ROLE_ADMIN') %}
                        <select name="user" class="form-control select2">
                            <option></option>
                            {% for user in users %}
                                <option value="{{ user.id }}" {% if user_id is not null and user.id == user_id %}selected="selected"{% endif %}>{{ user.username }}</option>
                            {% endfor %}
                        </select>
                    {% else %}
                        <input class="form-control" value="{{ app.user }}" disabled/>
                    {% endif %}
                </div>
                <div class="col-md-3">
                    <input type="date" name="start_date" class="form-control" value="{{ start_date }}"/>
                </div>
                <div class="col-md-3">
                    <input type="date" name="end_date" class="form-control" value="{{ end_date }}"/>
                </div>
                <div class="col-md-3">
                    <input type="submit" class="btn btn-primary" value="Filter" />
                </div>
            </div>
        </form>

        <br />
        <form method="POST" action="{{ path('list_export') }}">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>Id</th>
                        <th>Company</th>
                        <th>Date</th>
                        <th>Total</th>
                        {% if is_granted('ROLE_ADMIN') %}<th>User</th>{% endif %}
                        <th>Actions</th>
                        <th></th>
                    </tr>
                    {% for priceList in priceLists %}
                        <tr>
                            <td>{{ priceList.id }}</td>
                            <td>{{ priceList.company }}</td>
                            <td>{{ priceList.performDate|date('Y-m-d H:i:s') }}</td>
                            <td>{{ priceList.total }}</td>
                            {% if is_granted('ROLE_ADMIN') %}<th>{{ priceList.user.username }}</th>{% endif %}
                            <td>
                                <a href="{{ path('view', {'id': priceList.id}) }}">View</a>
                                {#<a href="{{ path('single', {'id': priceList.id}) }}">Edit</a>#}
                            </td>
                            <td><input type="checkbox" name="ids[{{ priceList.id }}]"/>&nbsp;</td>
                        </tr>
                    {% endfor %}
                </table>

            </div>
            <div class="row">
                <div class="col-md-11">
                    {{ knp_pagination_render(priceLists) }}
                </div>
                <div class="col-md-1">
                    <br />
                    <input type="submit" class="btn btn-primary" value="Export"/>
                </div>
            </div>

        </form>




    </div>

{% endblock %}