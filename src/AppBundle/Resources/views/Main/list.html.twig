{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}
    {{ parent() }}

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <tr>
                <th>Id</th>
                <th>Company</th>
                {#<th>Total</th>#}
                <th>Actions</th>
            </tr>
            {% for priceList in priceLists %}
                <tr>
                    <td>{{ priceList.id }}</td>
                    <td>{{ priceList.company }}</td>
                    {#<td>{{ priceList.getTotal() }}</td>#}
                    <td><a href="{{ path('single', {'id': priceList.id}) }}">Edit</a></td>
                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}