{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('/bundles/app/select2/css/select2.min.css') }}"/>
{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="container content">
        <form method="POST" action="{{ path('statistic') }}">
            <div class="row">
                <div class="col-md-3"><strong>User</strong></div>
                <div class="col-md-3"><strong>Company</strong></div>
                <div class="col-md-2"><strong>From</strong></div>
                <div class="col-md-2"><strong>To</strong></div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <select id="user-select" name="user" class="form-control select2">
                        <option value=0></option>
                        {% for user in users %}
                            <option value="{{ user.id }}" {% if userId is not null and user.id == userId %}selected="selected"{% endif %}>{{ user }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-3">
                    <select id="company-select" name="company" class="form-control select2">
                        <option value=0></option>
                        {% for company in companies %}
                            <option value="{{ company.id }}" {% if companyId is not null and company.id == companyId %}selected="selected"{% endif %}>{{ company }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-2">
                    <input type="date" name="start_date" class="form-control" value="{{ start_date }}"/>
                </div>
                <div class="col-md-2">
                    <input type="date" name="end_date" class="form-control" value="{{ end_date }}"/>
                </div>
                <div class="col-md-2">
                    <input type="submit" class="btn btn-primary" value="Filter" />
                </div>
            </div>
        </form>

        <br />
        <table class="table table-striped table-bordered">
            <tr>
                <th>Product</th>
                <th>Single Price</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>

            {% set i = 1 %}
            {% set totalPrice = 0 %}
            {% for data in result %}
                <tr>
                    <td>{{ data['name'] }}</td>
                    <td>{{ data['price'] }}</td>
                    <td>{{ data['quantity'] }}</td>

                    {#{% set price = 0 %}#}
                    {#{% for qnt in data['quantities'] %}#}
                        {#{% set price = price + (qnt['quantity'] * data['price'] * (100 - qnt['discount']) / 100) %}#}
                    {#{% endfor %}#}

                    {% set totalPrice = totalPrice + data['calculatedPrice'] %}
                    <td>{{ data['calculatedPrice'] }}</td>
                </tr>

                {% set i = i + 1 %}
            {% endfor %}

            {% if i > 1 %}
                <tr>
                    <td></td>
                    <td></td>
                    <td style="font-size: medium"><strong>Total Price</strong></td>
                    <td style="font-size: medium" class="total_price"><strong>{{ totalPrice }}</strong></td>
                </tr>
            {% endif %}

        </table>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('/bundles/app/select2/js/select2.min.js') }}"></script>
    <script type="text/javascript">
        $('.select2').select2();
    </script>
    <script>
        $('#user-select').on('change', function() {
            if(this.value){
                $('#company-select').val(null);
            }
        });
        $('#company-select').on('change', function() {
            if(this.value){
                $('#user-select').val(null);
            }
        });
    </script>
{% endblock %}