{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('/bundles/app/select2/css/select2.min.css') }}"/>
{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="container content">
        <form method="POST" action="{{ path('statistic') }}">
            <div class="row">
                <div class="col-md-3"><strong>Company</strong></div>
                <div class="col-md-3"><strong>From</strong></div>
                <div class="col-md-3"><strong>To</strong></div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <select name="company" class="form-control select2" required>
                        <option></option>
                        {% for company in companies %}
                            <option value="{{ company.id }}" {% if companyId is not null and company.id == companyId %}selected="selected"{% endif %}>{{ company }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-3">
                    <input type="date" name="start_date" class="form-control" value="{{ start_date }}"/>
                </div>
                <div class="col-md-3">
                    <input type="date" name="end_date" class="form-control" value="{{ end_date }}"/>
                </div>
                <div class="col-md-3">
                    <input type="submit" class="btn btn-primary" value="Filter" />
                </div>
            </div>
        </form>

        <br />
        <table class="table table-striped table-bordered">
            <tr>
                <th>N:</th>
                <th>Product</th>
                <th>Single Price</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>

            {% set i = 1 %}
            {% set totalPrice = 0 %}
            {% for data in result %}
                <tr>
                    <td>{{ i }}</td>
                    <td>{{ data['name'] }}</td>
                    <td>{{ data['price'] }}</td>
                    <td>{{ data['quantity']|round }}</td>

                    {% set price = data['quantity'] * data['price'] %}
                    {% set totalPrice = totalPrice + price %}
                    <td>{{ price }}</td>
                </tr>

                {% set i = i + 1 %}
            {% endfor %}

            {% if i > 1 %}
                <tr>
                    <td>Total Price</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>{{ totalPrice }}</td>
                </tr>
            {% endif %}

        </table>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('/bundles/app/select2/js/select2.min.js') }}"></script>
    <script type="text/javascript">
        $('.select2').select2();
    </script>
{% endblock %}